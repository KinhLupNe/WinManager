<UserControl x:Class="WinManager.Views.PerformanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WinManager.Views"
             xmlns:vm="clr-namespace:WinManager.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <d:UserControl.DataContext>
        <vm:PerformanceControl></vm:PerformanceControl>
    </d:UserControl.DataContext>

    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:CPUControl}">
            <local:CPUView></local:CPUView>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:MemoryControl}">
            <local:MemoryView></local:MemoryView>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DiskDetailControl}">
            <local:DisksView></local:DisksView>
        </DataTemplate>
        <Style x:Key="NavButtonStyle" TargetType="RadioButton">
            <Setter Property="Height" Value="80" />
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="#06b6d4" />
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="GroupName" Value="NavGroup" />
            <Setter Property="Cursor" Value="Hand" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="MainBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="#27272a"
                                BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="20*" />
                                    <ColumnDefinition Width="60*" />
                                </Grid.ColumnDefinitions>

                                <Border x:Name="ActiveBar"
                                        Grid.Column="0"
                                        Background="{TemplateBinding BorderBrush}"
                                        CornerRadius="2,0,0,2"
                                        Visibility="Collapsed" />

                                <Border x:Name="IconBox"
                                        Grid.Column="1"
                                        Width="40" Height="40"
                                        Background="#18181b"
                                        CornerRadius="8"
                                        BorderBrush="#27272a"
                                        BorderThickness="1">
                                    <TextBlock Text="{TemplateBinding Tag}"
                                               x:Name="IconText"
                                               Foreground="{TemplateBinding Foreground}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"
                                               FontSize="10"
                                               FontWeight="Bold" />
                                </Border>

                                <ContentPresenter Grid.Column="2"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Margin="10,0,0,0" />
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="MainBorder" Property="Background" Value="#101012" />
                                <Setter TargetName="IconBox" Property="BorderBrush" Value="{Binding BorderBrush, RelativeSource={RelativeSource TemplatedParent}}" />
                                <Setter Property="Foreground" Value="White" />
                            </Trigger>

                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="MainBorder" Property="Background" Value="#18181b" />
                                <Setter TargetName="MainBorder" Property="BorderThickness" Value="0" />
                                <Setter TargetName="ActiveBar" Property="Visibility" Value="Visible" />

                                <Setter TargetName="IconBox" Property="Background" Value="#1a1a1a" />
                                <Setter TargetName="IconBox" Property="BorderBrush" Value="{Binding BorderBrush, RelativeSource={RelativeSource TemplatedParent}}" />

                                <Setter TargetName="IconText" Property="Foreground" Value="{Binding BorderBrush, RelativeSource={RelativeSource TemplatedParent}}" />

                                <Setter Property="Foreground" Value="{Binding BorderBrush, RelativeSource={RelativeSource Self}}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*" />
            <ColumnDefinition Width="7.5*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#000000" Padding="15,20">
            <StackPanel>
                <TextBlock Text="MONITOR" Foreground="#71717a" FontWeight="Bold" FontSize="11" Margin="0,0,0,15" />

                <RadioButton Style="{StaticResource NavButtonStyle}"
                             Tag="CPU"
                             Command="{Binding NavigateToCPUCommand}"
                             BorderBrush="#06b6d4"
                             IsChecked="True">
                    <StackPanel>
                        <TextBlock Text="CPU" Foreground="White" FontWeight="SemiBold" />
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="{Binding CpuControl.Usage,StringFormat={}{0:N0} %}" FontWeight="Bold"
                                       Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}" />
                            <TextBlock Text="{Binding CpuControl.Speed, StringFormat={}{0:N2} GHz}" Foreground="Gray" Margin="10,0,0,0" />
                        </StackPanel>
                    </StackPanel>
                </RadioButton>

                <RadioButton Style="{StaticResource NavButtonStyle}"
                             Tag="RAM"
                             Command="{Binding NavigateToMemoryCommand}"
                             BorderBrush="#FFFF733E">
                    <StackPanel>
                        <TextBlock Text="Memory" Foreground="White" FontWeight="SemiBold" />
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="{Binding MemControl.MemoryUsagePercent,StringFormat={}{0:N0} %}" FontWeight="Bold"
                                       Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}" />
                            <TextBlock  Foreground="Gray" Margin="10,0,0,0">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0:F1} GB / {1:F1} GB">
                                        <Binding Path="MemControl.InUseGB" />
                                        <Binding Path="MemControl.TotalMemoryGB" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </RadioButton>

                <ItemsControl ItemsSource="{Binding DiskControl.DiskList}">

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <RadioButton Style="{StaticResource NavButtonStyle}"
                         GroupName="NavGroup"
                         Tag="{Binding DiskType}"
                         BorderBrush="#10b981"
                         Margin="0,0,0,5"
                         Command="{Binding DataContext.NavigateToDiskCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                         CommandParameter="{Binding}">

                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Model}"
                               Foreground="White"
                               FontWeight="SemiBold"
                               FontSize="11"
                               TextTrimming="CharacterEllipsis"
                               MaxWidth="180" />

                                    <StackPanel Orientation="Horizontal" Margin="0,3,0,5">
                                        <TextBlock Text="{Binding ActiveTime, StringFormat={}{0:N0} %}"
                                   FontWeight="Bold" FontSize="14"
                                   Foreground="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}" />

                                        <TextBlock Text="{Binding FormattedTotalSize}"
                                   Foreground="Gray" FontSize="11"
                                   VerticalAlignment="Bottom" Margin="10,0,0,1" />
                                    </StackPanel>

                                    <ItemsControl ItemsSource="{Binding Volumes}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>

                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#3f3f46"
                                        CornerRadius="3"
                                        Padding="4,1"
                                        Margin="0,0,5,2">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding DriveLetter}"
                                                   Foreground="#e4e4e7"
                                                   FontSize="10"
                                                   FontWeight="Bold" />

                                                        <TextBlock Text="{Binding Label}"
                                                   Foreground="Gray"
                                                   FontSize="10"
                                                   Margin="5,0,0,0"
                                                   MaxWidth="50"
                                                   TextTrimming="CharacterEllipsis" />
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </RadioButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <Border Grid.Column="1">
            <ContentControl Content="{Binding CurrentView}" />
        </Border>
    </Grid>
</UserControl>