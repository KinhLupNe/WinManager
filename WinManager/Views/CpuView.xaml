<UserControl x:Class="WinManager.Views.CPUView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinManager.Views"
             xmlns:vm="clr-namespace:WinManager.ViewModels"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:CPUControl></vm:CPUControl>
    </UserControl.DataContext>
    <Grid>
        <Border Background="#18181b" CornerRadius="12" BorderBrush="#27272a" BorderThickness="1" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="CPU Usage History" Foreground="White" FontWeight="SemiBold" Margin="0,0,0,10"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
