<UserControl x:Class="WinManager.Views.CPUView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinManager.Views"
             xmlns:vm="clr-namespace:WinManager.ViewModels"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:painting="clr-namespace:LiveChartsCore.SkiaSharpView.Painting;assembly=LiveChartsCore.SkiaSharpView"
             xmlns:skia="clr-namespace:SkiaSharp;assembly=SkiaSharp"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">

    <d:UserControl.DataContext>
        <vm:CPUControl/>
    </d:UserControl.DataContext>
    
    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Border Background="#18181b" CornerRadius="12" BorderBrush="#27272a" BorderThickness="1" Padding="25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>  <RowDefinition Height="320"/>   <RowDefinition Height="*"/>     </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="CPU" FontSize="26" FontWeight="Bold" Foreground="White"></TextBlock>
                        <TextBlock Text="{Binding Name}"  FontSize="14" Foreground="Gray" Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Usage, StringFormat={}{0:N0}%}" 
                                   FontSize="36" FontWeight="Bold" Foreground="#00FFFF" 
                                   HorizontalAlignment="Right"/>
                        <TextBlock Text="UTILIZATION" FontSize="11" FontWeight="Bold" Foreground="Gray" 
                                   HorizontalAlignment="Right" Margin="0,-6,0,0"/>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1" BorderBrush="#27272a" BorderThickness="1" CornerRadius="8" 
                        Background="#00000000" Margin="0,10,0,20">
                    <lvc:CartesianChart Series="{Binding Series}"
                                        XAxes="{Binding XAxes}"
                                        YAxes="{Binding YAxes}"
                                        TooltipPosition="Top"
                                        Margin="10" Height="280"/>
                </Border>

                <UniformGrid Grid.Row="2" Columns="4" Rows="1" VerticalAlignment="Top">
                    <StackPanel>
                        <TextBlock Text="Usage" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="{Binding Usage}" Style="{StaticResource ValueStyle}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="UpTime" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="{Binding UpTime}" Style="{StaticResource ValueStyle}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Core" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="{Binding Core}" Style="{StaticResource ValueStyle}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Speed" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="{Binding Speed, StringFormat={}{0:N2} GHz}" Style="{StaticResource ValueStyle}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Temperature" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="{Binding Temperature}" Style="{StaticResource ValueStyle}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Power" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="{Binding Power}" Style="{StaticResource ValueStyle}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Voltage" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="{Binding Voltage}" Style="{StaticResource ValueStyle}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Processes" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="{Binding Processes}" Style="{StaticResource ValueStyle}"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Threads" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="{Binding Threads}" Style="{StaticResource ValueStyle}"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Handles" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="{Binding Handles}" Style="{StaticResource ValueStyle}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="Base speed" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="{Binding BaseSpeed, StringFormat={}{0:N2} GHz}" Style="{StaticResource ValueStyle}"/>
                    </StackPanel>
                    

                </UniformGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>