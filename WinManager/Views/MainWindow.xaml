<Window x:Class="WinManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:WinManager.Views"
        Title="WinManager" Height="768" Width="1200"
        WindowStyle="None" ResizeMode="CanResizeWithGrip" AllowsTransparency="True"
        Background="{StaticResource AppBackground}"
        MouseDown="Window_MouseDown">
    <Border CornerRadius="16" BorderThickness="1" BorderBrush="#33FFFFFF" ClipToBounds="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="{StaticResource SidebarBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Padding="24" BorderBrush="#33FFFFFF" BorderThickness="0,0,0,1" Background="#00000020">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <md:PackIcon Kind="MonitorDashboard" Foreground="{DynamicResource PrimaryHueMidBrush}" Width="28" Height="28"/>
                        <TextBlock Text="WIN MANAGER" FontWeight="Bold" Foreground="White" FontSize="18" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    <RadioButton x:Name="BtnCpu" GroupName="Menu" Style="{StaticResource NavRadioButtonStyle}" Tag="CPU" IsChecked="True">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="Cpu64Bit" Width="20" Height="20" Margin="10,0"/>
                            <TextBlock Text="Processor" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="BtnRam" GroupName="Menu" Style="{StaticResource NavRadioButtonStyle}" Tag="MEMORY">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="Memory" Width="20" Height="20" Margin="10,0"/>
                            <TextBlock Text="Memory" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="BtnDisk" GroupName="Menu" Style="{StaticResource NavRadioButtonStyle}" Tag="DISK">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="Harddisk" Width="20" Height="20" Margin="10,0"/>
                            <TextBlock Text="Storage" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="BtnGpu" GroupName="Menu" Style="{StaticResource NavRadioButtonStyle}" Tag="GPU">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="LightningBolt" Width="20" Height="20" Margin="10,0"/>
                            <TextBlock Text="Graphics" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>

                    <RadioButton x:Name="BtnServices" GroupName="Menu" Style="{StaticResource NavRadioButtonStyle}" Tag="SERVICES">
                        <StackPanel Orientation="Horizontal">
                            <md:PackIcon Kind="CogBox" Width="20" Height="20" Margin="10,0"/>
                            <TextBlock Text="Services" VerticalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                </StackPanel>

                <Border Grid.Row="2" Margin="20" Background="#40000000" CornerRadius="8" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <md:PackIcon Kind="Magnify" Foreground="Gray"/>
                        <TextBox Grid.Column="1" Margin="10,0,0,0" md:HintAssist.Hint="Search processes..." Foreground="White" BorderThickness="0" Background="Transparent"/>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Column="1" Background="{StaticResource AppBackground}">
                <Ellipse Width="600" Height="600" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-200,-100,0" IsHitTestVisible="False" Opacity="0.15">
                    <Ellipse.Effect>
                        <BlurEffect Radius="150"/>
                    </Ellipse.Effect>
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Fill" Value="{StaticResource CpuBrush}"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, ElementName=BtnRam}" Value="True">
                                    <Setter Property="Fill" Value="{StaticResource MemBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsChecked, ElementName=BtnDisk}" Value="True">
                                    <Setter Property="Fill" Value="{StaticResource DiskBrush}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsChecked, ElementName=BtnGpu}" Value="True">
                                    <Setter Property="Fill" Value="{StaticResource GpuBrush}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>

                <ContentControl Margin="0">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, ElementName=BtnCpu}" Value="True">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <views:CpuView/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                                
                                
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </Grid>
        </Grid>
    </Border>
</Window>