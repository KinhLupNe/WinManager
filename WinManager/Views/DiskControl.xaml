<UserControl x:Class="WinManager.Views.DiskControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:WinManager.ViewModels">
    <UserControl.DataContext>
        <vm:DiskPresenter/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="DISK" FontSize="20" FontWeight="Bold" Margin="0 0 0 10"/>
            <TextBlock Text="{Binding DiskUsageText}"
                       FontSize="24"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</UserControl>
